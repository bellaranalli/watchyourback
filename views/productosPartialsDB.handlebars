<div>
  <h2 class="titulo1">PRODUCTOS</h2>
</div>

<table>
  <thead>
    <tr>
     <div><th>NAME</th></div>
     <div><th>PRICE</th></div>
     <div><th>CATEGORY</th></div>
     <div><th>DESCRIPTION</th></div>
     <div><th>STOCK</th></div>
    </tr>
  </thead>
  <tbody>
    {{#each payload}}
      <tr>
        <td>{{this.product.name}}</td>
        <td>{{this.product.price}}</td>
        <td>{{this.product.category}}</td>
        <td>{{this.product.description}}</td>
        <td>{{this.product.stock}}</td>
        <td><button class="boton1">AGREGAR PRODUCTO</button></td>
      </tr>
    {{/each}}
  </tbody>
</table>

<p>PAGE: {{page}}</p>
{{#if prevLink}}
  <a href="{{prevLink}}" role="button">LAST</a>
{{/if}}
{{#if nextLink}}
  <a href="{{nextLink}}" role="button">NEXT</a>
{{/if}}